<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/cont_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!--<include
        layout="@layout/layout_cont_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="304dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/header_drawer"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:background="@drawable/background_profile"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/bg_sign_in"
                    android:layout_marginTop="24dp"/>
                <sangmaneproject.kindis.custom.TextViewSemiBold
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James Smith"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navigation_drawer"
                android:layout_below="@+id/header_drawer"
                android:layout_width="match_parent"
                android:background="@drawable/background"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="32dp">
                <LinearLayout
                    android:id="@+id/menu_home"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="32dp"/>
                    <sangmaneproject.kindis.custom.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_notif"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notif"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="32dp"/>
                    <sangmaneproject.kindis.custom.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notication"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_profile"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_account"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="32dp"/>
                    <sangmaneproject.kindis.custom.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/menu_premium"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_money"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="32dp"/>
                    <sangmaneproject.kindis.custom.TextViewSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Premium"
                        android:textSize="14sp"
                        android:textColor="@color/safety_orange"/>
                </LinearLayout>

                <View
                    android:id="@+id/hr_drawer"
                    android:layout_below="@+id/navigation_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/dark_jungle_green"/>

                <sangmaneproject.kindis.custom.TextViewSemiBold
                    android:id="@+id/menu_faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:text="FAQ"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:clickable="true"/>

                <sangmaneproject.kindis.custom.TextViewSemiBold
                    android:id="@+id/menu_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:clickable="true"/>

                <sangmaneproject.kindis.custom.TextViewSemiBold
                    android:id="@+id/menu_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:text="Terms and Agreements"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:clickable="true"/>
            </LinearLayout>

            <sangmaneproject.kindis.custom.ButtonSemiBold
                android:layout_below="@+id/header_drawer"
                android:layout_width="107dp"
                android:layout_height="32dp"
                android:layout_marginTop="-16dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_rounded_gray"
                app:paddingEnd="0dp"
                app:paddingStart="0dp"
                android:textSize="12sp"
                android:text="FREE"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
