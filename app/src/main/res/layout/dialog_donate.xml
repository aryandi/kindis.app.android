<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_horz"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>

    <co.digdaya.kindis.live.custom.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        android:text="Nominal:"
        android:textSize="20sp"
        android:textColor="@color/dark_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="126dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 10.000"
                android:textSize="16sp"
                android:textColor="@color/white" />
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 20.000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 50.000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 100.000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 500.000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <co.digdaya.kindis.live.custom.RadioButtonRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="24dp"
                android:text="Rp 1.000.000"
                android:textSize="16sp"
                android:textColor="@color/white"/>
            <co.digdaya.kindis.live.custom.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="For other amounts, please call the contact person listed."
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RadioGroup>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <co.digdaya.kindis.live.custom.TextViewSemiBold
            android:id="@+id/btn_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:text="CONTINUE"
            android:textColor="@color/jungle_green"
            android:textSize="14sp"
            android:clickable="true"/>

        <co.digdaya.kindis.live.custom.TextViewSemiBold
            android:id="@+id/btn_cancel"
            android:layout_toLeftOf="@+id/btn_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:padding="8dp"
            android:text="CANCEL"
            android:textColor="@color/jungle_green"
            android:textSize="14sp"
            android:clickable="true" />
    </RelativeLayout>
</LinearLayout>