<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="sangmaneproject.kindis.view.fragment.Profile">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@drawable/background_profile">
        <ImageButton
            android:id="@+id/btn_drawer"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_drawer"
            android:background="@android:color/transparent"/>
        <sangmaneproject.kindis.custom.TextViewSemiBold
            android:id="@+id/title"
            android:layout_toRightOf="@+id/btn_drawer"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:text="Profile"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/btn_riwayat"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_search"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:src="@drawable/bg_sign_in"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

    </LinearLayout>

    <sangmaneproject.kindis.custom.ButtonSemiBold
        android:layout_below="@+id/profile_header"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_marginTop="-16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_rounded_gray"
        app:paddingEnd="0dp"
        app:paddingStart="0dp"
        android:textSize="12sp"
        android:text="FREE"
        android:textColor="@color/white"/>
</RelativeLayout>
