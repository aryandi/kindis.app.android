<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context="co.digdaya.kindis.view.adapter.AdapterNotification">
    
    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:minHeight="64dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@color/safety_orange"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="24dp">
        <co.digdaya.kindis.custom.TextViewBold
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/dark_gray"
            android:text="Title"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="This means the notif is unread"/>
    </RelativeLayout>
</LinearLayout>
