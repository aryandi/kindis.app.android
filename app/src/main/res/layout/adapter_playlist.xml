<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adapter_playlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:background="@android:color/transparent"
    tools:context="sangmaneproject.kindis.view.adapter.item.AdapterPlaylist">

    <sangmaneproject.kindis.custom.TextViewBold
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="Mengejar Sorga"/>

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_songlis"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_centerVertical="true"/>
</RelativeLayout>
