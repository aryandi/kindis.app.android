<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="co.digdaya.kindis.view.activity.Player.Player">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/dark_jungle_green">
        <ImageButton
            android:id="@+id/btn_hide"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_down"
            android:tint="@color/white"
            android:background="@android:color/transparent"/>

        <LinearLayout
            android:id="@+id/cont_header"
            android:layout_toRightOf="@+id/btn_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <co.digdaya.kindis.custom.TextViewRegular
                android:id="@+id/title_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dark_gray"
                android:text="Playlist"/>
            <co.digdaya.kindis.custom.TextViewBold
                android:id="@+id/subtitle_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Fresh Indie"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_list"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_queue"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/list_player"
        android:layout_above="@+id/cont_navigation"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/cont_navigation"
        android:layout_above="@+id/cont_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_shuffle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_shuffle"
            android:layout_marginRight="36dp"/>
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/cont_detail"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="10dp">
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_next"
            android:layout_marginRight="36dp"/>
        <ImageButton
            android:id="@+id/btn_looping"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_repeat"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cont_play"
        android:clickable="true"
        android:layout_above="@+id/cont_detail"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="-16dp"
        android:background="@drawable/button_circle">
        <ImageView
            android:id="@+id/btn_play"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_play_large"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cont_detail"
        android:layout_above="@+id/footer_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageButton
            android:id="@+id/btn_songlis"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_songlis"
            android:background="@android:color/transparent"/>
        <LinearLayout
            android:layout_toRightOf="@+id/btn_songlis"
            android:layout_toLeftOf="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp">
            <co.digdaya.kindis.custom.TextViewBold
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ini Judul Lagu"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white" />
            <co.digdaya.kindis.custom.TextViewRegular
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Artist Penyanyi"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_circle"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_player"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"/>

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            android:layout_toRightOf="@+id/current_time"
            android:layout_toLeftOf="@+id/duration"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/medium_sea_green"
            android:progressTint="@color/medium_sea_green"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="00:00"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"/>
    </RelativeLayout>
</RelativeLayout>
