<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_musiq_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <co.digdaya.kindis.live.custom.TextViewBold
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <co.digdaya.kindis.live.custom.TextViewSemiBold
        android:id="@+id/subtitle"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:text="need deskripsi from api ads banner"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <co.digdaya.kindis.live.custom.ButtonSemiBold
        android:id="@+id/btn_donate"
        android:layout_below="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        app:paddingEnd="0dp"
        app:paddingStart="0dp"
        android:background="@drawable/button_rounded_green"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="34dp"
        android:paddingRight="34dp"
        android:text="DONATE"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"/>
</RelativeLayout>